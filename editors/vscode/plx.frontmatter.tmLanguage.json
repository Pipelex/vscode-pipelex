{
  "fileTypes": [],
  "injectionSelector": "L:text.html.markdown",
  "patterns": [
    {
      "include": "#plxFrontmatterCodeblock"
    }
  ],
  "repository": {
    "plxFrontmatterCodeblock": {
      "begin": "\\A\\+{3}\\s*$",
      "end": "(^|\\G)(?=\\s*[\\+~]{3,}\\s*$)",
      "contentName": "meta.embedded.block.plx.frontmatter",
      "patterns": [
        {
          "include": "source.plx"
        }
      ]
    }
  },
  "scopeName": "markdown.plx.frontmatter.codeblock"
}