{
  "fileTypes": [],
  "injectionSelector": "L:text.html.markdown",
  "patterns": [
    {
      "include": "#mthdsFrontmatterCodeblock"
    }
  ],
  "repository": {
    "mthdsFrontmatterCodeblock": {
      "begin": "\\A\\+{3}\\s*$",
      "end": "(^|\\G)(?=\\s*[\\+~]{3,}\\s*$)",
      "contentName": "meta.embedded.block.mthds.frontmatter",
      "patterns": [
        {
          "include": "source.mthds"
        }
      ]
    }
  },
  "scopeName": "markdown.mthds.frontmatter.codeblock"
}