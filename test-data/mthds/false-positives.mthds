# Test: Ensure plain strings are NOT colored as Jinja/HTML/injections
# Covers: literal strings (no MTHDS patterns), plain definition values, structure fields

[concept.PlainText]
definition = "A simple text concept with words that could false-match"
description = "The variable foo should not be colored"

# Literal strings must NOT match @injection or $template or {{ jinja }}
note = 'Literal string: @not_injection $not_template {{ not_jinja }}'
multiline_literal = '''
@also_not_injection
$also_not_template
{% not_jinja %}
<not_html>
'''

# Structure fields with type = "text" should NOT get pipe-type coloring
[concept.PlainText.structure]
field_a = { type = "text", required = true }
field_b = { type = "text", definition = "A plain text field" }

# Boolean and number values
enabled = true
count = 42
ratio = 3.14
hex_val = 0xFF
